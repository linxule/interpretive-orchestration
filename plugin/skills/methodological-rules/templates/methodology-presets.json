  "preset_selection_guide": {
    "questions": [
      {
        "question": "How do you view the relationship between researcher and data?",
        "options": {
          "Data reveals patterns that exist independently": ["glaserian"],
          "Researcher interprets patterns systematically": ["gioia_corley", "straussian"],
          "Researcher and participants co-construct meaning": ["charmaz_constructivist"],
          "Researcher seeks to understand lived experience": ["phenomenology"],
          "Researcher interprets cultural meaning in context": ["ethnography"]
        }
      },
      {
        "question": "How important is a structured coding process?",
        "options": {
          "Very important - I want clear stages and procedures": ["gioia_corley", "straussian"],
          "Moderately important - structure with flexibility": ["charmaz_constructivist"],
          "Less important - let the process emerge": ["glaserian"],
          "Different - focused on experience/culture": ["phenomenology", "ethnography"]
        }
      },
      {
        "question": "When should you engage with theoretical literature?",
        "options": {
          "Before and during - it sensitizes analysis": ["gioia_corley", "straussian"],
          "Throughout - in dialogue with data": ["charmaz_constructivist"],
          "After core category emerges - to avoid forcing": ["glaserian"],
          "Before - for phenomenological/cultural framework": ["phenomenology", "ethnography"]
        }
      }
    ]
  }
}
