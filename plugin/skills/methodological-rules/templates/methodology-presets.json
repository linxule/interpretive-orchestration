{
  "_description": "Methodology presets configure default rules, prompts, and behaviors based on the researcher's chosen methodological tradition.",

  "presets": {
    "gioia_corley": {
      "name": "Gioia & Corley Systematic Approach",
      "description": "Systematic interpretive approach emphasizing data structure, parallel streams, and visible reasoning.",
      "philosophical_defaults": {
        "ontology": "interpretivist",
        "epistemology": "systematic_interpretation",
        "vocabulary_mode": "systematic",
        "reflexivity_level": "high"
      },
      "isolation_defaults": {
        "case_isolation": {
          "enabled": true,
          "relaxes_at": "phase3_pattern_characterization",
          "friction_level": "challenge"
        },
        "wave_isolation": {
          "enabled": true,
          "relaxes_at": "cross_wave_analysis",
          "friction_level": "challenge"
        },
        "stream_separation": {
          "enabled": true,
          "relaxes_at": "phase2_synthesis",
          "friction_level": "nudge"
        }
      },
      "proactive_prompts": [
        "in_vivo_check",
        "memo_prompt",
        "negative_case_prompt",
        "variation_memo",
        "theoretical_sensitivity",
        "constant_comparison",
        "synthesis_readiness"
      ],
      "key_practices": [
        "Build data structure (1st order → 2nd order → aggregate dimensions)",
        "Use informant terms for first-order concepts",
        "Parallel theoretical and empirical streams",
        "Visible reasoning in all coding decisions",
        "Structured interpretive pauses every 5 documents"
      ],
      "coding_verbs": ["construct", "interpret", "characterize", "organize", "build"],
      "avoid_verbs": ["discover", "find", "extract", "uncover", "reveal"]
    },

    "charmaz_constructivist": {
      "name": "Charmaz Constructivist Grounded Theory",
      "description": "Emphasizes co-construction, reflexivity, and researcher positioning in meaning-making.",
      "philosophical_defaults": {
        "ontology": "relativist",
        "epistemology": "co_constructive",
        "vocabulary_mode": "constructivist",
        "reflexivity_level": "maximal"
      },
      "isolation_defaults": {
        "case_isolation": {
          "enabled": true,
          "relaxes_at": "phase2_synthesis",
          "friction_level": "nudge"
        },
        "wave_isolation": {
          "enabled": true,
          "relaxes_at": "cross_wave_analysis",
          "friction_level": "nudge"
        },
        "stream_separation": {
          "enabled": false,
          "friction_level": "silent"
        }
      },
      "proactive_prompts": [
        "in_vivo_check",
        "memo_prompt",
        "theoretical_sensitivity",
        "reflexivity_check",
        "constant_comparison"
      ],
      "key_practices": [
        "Reflexive memoing throughout",
        "Position yourself explicitly in the research",
        "Co-construct meaning with participants",
        "Use gerunds for codes (action focus)",
        "Theoretical sampling guided by emerging theory"
      ],
      "coding_verbs": ["co-construct", "negotiate", "build together", "interpret", "create meaning"],
      "avoid_verbs": ["discover", "find", "extract", "identify"]
    },

    "straussian": {
      "name": "Straussian Grounded Theory",
      "description": "Structured approach with coding paradigm, axial coding, and conditional matrix.",
      "philosophical_defaults": {
        "ontology": "critical_realist",
        "epistemology": "systematic_interpretation",
        "vocabulary_mode": "systematic",
        "reflexivity_level": "moderate"
      },
      "isolation_defaults": {
        "case_isolation": {
          "enabled": true,
          "relaxes_at": "phase3_pattern_characterization",
          "friction_level": "challenge"
        },
        "wave_isolation": {
          "enabled": true,
          "relaxes_at": "cross_wave_analysis",
          "friction_level": "challenge"
        },
        "stream_separation": {
          "enabled": true,
          "relaxes_at": "phase2_synthesis",
          "friction_level": "challenge"
        }
      },
      "proactive_prompts": [
        "memo_prompt",
        "negative_case_prompt",
        "variation_memo",
        "theoretical_coding_readiness",
        "constant_comparison"
      ],
      "key_practices": [
        "Open coding → Axial coding → Selective coding",
        "Use coding paradigm (conditions, actions, consequences)",
        "Build conditional matrix",
        "Theoretical sampling for category development",
        "Integrate around core category"
      ],
      "coding_verbs": ["identify", "categorize", "relate", "integrate", "construct"],
      "avoid_verbs": []
    },

    "glaserian": {
      "name": "Glaserian Classic Grounded Theory",
      "description": "Emergence-focused approach emphasizing theoretical sensitivity and minimal preconception.",
      "philosophical_defaults": {
        "ontology": "objectivist",
        "epistemology": "objectivist_discovery",
        "vocabulary_mode": "discovery",
