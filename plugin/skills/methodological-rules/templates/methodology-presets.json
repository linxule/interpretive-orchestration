        "stream_separation": {
          "enabled": true,
          "relaxes_at": "phase3_pattern_characterization",
          "friction_level": "hard_stop"
        }
      },
      "proactive_prompts": [
        "memo_prompt",
        "negative_case_prompt",
        "constant_comparison"
      ],
      "key_practices": [
        "Let theory emerge - no forcing",
        "Delay literature review until after core category emerges",
        "Substantive coding → Theoretical coding",
        "Focus on basic social process",
        "Theoretical sensitivity from experience, not preconception"
      ],
      "coding_verbs": ["discover", "find", "identify", "uncover", "reveal"],
      "avoid_verbs": []
